                       FontFamily="Roboto"
                       FontSize="36"
                       Foreground="#7777A6" Width="342"/>
            <Rectangle Width="350"
                       Height="2"
                       Fill="#7777A6"
                       HorizontalAlignment="Left"/>
        </StackPanel>
        
        <StackPanel Margin="374,212,63,135">
            <TextBlock Text="Расписание" 
                   FontFamily="Roboto"
                   FontSize="28"
                   Foreground="#7777A6"/>
            <ListView x:Name="lvInformation"
